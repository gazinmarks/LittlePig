<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginPageFragment">

    <fragment
        android:id="@+id/loginPageFragment"
        android:name="br.com.littlepig.presentation.ui.login.LoginPageFragment"
        android:label="LoginPageFragment"
        tools:layout="@layout/login_page_fragment">
        <action
            android:id="@+id/navigate_to_registerPageFragment"
            app:destination="@id/registerPageFragment" />
        <action
            android:id="@+id/action_loginPageFragment_to_homePageFragment"
            app:destination="@id/homePageFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerPageFragment"
        android:name="br.com.littlepig.presentation.ui.register.RegisterPageFragment"
        android:label="RegisterPageFragment"
        tools:layout="@layout/register_page_fragment">
        <action
            android:id="@+id/navigate_to_loginPageFragment"
            app:destination="@id/loginPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/homePageFragment"
        android:name="br.com.littlepig.presentation.ui.home.HomePageFragment"
        android:label="HomePageFragment"
        tools:layout="@layout/home_page_fragment" />
</navigation>